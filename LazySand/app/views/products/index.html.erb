<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'List of Sandwiches', products_path %></li>
  <li><%= link_to 'New Sandwich', new_product_path %></li>
  <li><%= link_to 'Nearby Requests', requests_list_path %></li>
</ul>

<h1>Listing Products</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Producer</th>
      <th>Name</th>
      <th>Price</th>
      <th>Ingredients</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.producer %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.ingredients %></td>
        <td><%= product.location %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to root_path, class: 'btn btn-primary' do %>
  <i class="gglyphicon glyphicon-chevron-left"></i> Logout
<% end %></p>