<!DOCTYPE html>
<html>
<head>
  <title>Lazy Sandwich</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/navigation' %>





<div id="wrapper">

 <div id="main-container" class="container">
 	<div class="row">
        <div class="col-xs-12">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: "alert alert-#{name}" %>
          <% end -%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <h3>Wahzawp</h3>
          <img src = http://i.imgur.com/vsDIhDC.gif?1 alt = 'sam' />
          <% if user_signed_in? %>
			<p><%= "Welcome, #{current_user.email}" %></p>
		<% end %>
          <p><h4>Location:</h4> San Jose State University</p>
          
        </div>
        <div class="col-xs-9">
         <main id="content">
			<%= yield %>
		</main>
        </div>
      </div>
    </div>






</div>
</body>
</html>
